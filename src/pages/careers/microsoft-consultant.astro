<style>
.job-detail-container {
	max-width: 900px;
	margin: 0 auto;
	padding: 2rem 1rem;
	font-family: system-ui, -apple-system, sans-serif;
}

.breadcrumb {
	margin-bottom: 2rem;
}

.breadcrumb a {
	color: #667eea;
	text-decoration: none;
	font-weight: 500;
}

.breadcrumb a:hover {
	text-decoration: underline;
}

.job-hero {
	background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
	color: white;
	padding: 3rem 2rem;
	border-radius: 12px;
	margin-bottom: 3rem;
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 2rem;
	flex-wrap: wrap;
}

.job-hero-content {
	flex: 1;
	min-width: 300px;
}

.job-hero h1 {
	font-size: 2.2rem;
	margin-bottom: 1rem;
	font-weight: 700;
	line-height: 1.2;
}

.job-meta {
	display: flex;
	gap: 1.5rem;
	flex-wrap: wrap;
	margin-bottom: 1.5rem;
	font-size: 1rem;
	opacity: 0.9;
}

.job-intro {
	font-size: 1.1rem;
	line-height: 1.6;
	opacity: 0.9;
}

.job-hero-actions {
	display: flex;
	flex-direction: column;
	gap: 1rem;
	min-width: 200px;
}

.job-content {
	background: white;
}

.job-section {
	margin-bottom: 3rem;
	padding-bottom: 2rem;
	border-bottom: 1px solid #e2e8f0;
}

.job-section:last-child {
	border-bottom: none;
}

.job-section h2 {
	color: #1a365d;
	font-size: 1.6rem;
	margin-bottom: 1.5rem;
	font-weight: 600;
}

.job-section h3 {
	color: #2d3748;
	font-size: 1.2rem;
	margin-bottom: 1rem;
	font-weight: 600;
}

.responsibilities, .req-list, .why-choose {
	list-style: none;
	padding: 0;
	margin: 1rem 0;
}

.responsibilities li, .req-list li, .why-choose li {
	padding: 0.75rem 0;
	padding-left: 2rem;
	position: relative;
	line-height: 1.5;
}

.responsibilities li::before {
	content: "‚úì";
	position: absolute;
	left: 0;
	color: #10b981;
	font-weight: bold;
	font-size: 1.2rem;
}

.req-list.mandatory li::before {
	content: "‚óâ";
	position: absolute;
	left: 0;
	color: #dc2626;
	font-weight: bold;
}

.why-choose li::before {
	content: "üåü";
	position: absolute;
	left: 0;
	font-size: 1.1rem;
}

.certification-note {
	background: #fef3cd;
	border: 1px solid #f59e0b;
	border-radius: 8px;
	padding: 1.5rem;
	margin-top: 1.5rem;
}

.benefits-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	gap: 2rem;
	margin-top: 1.5rem;
}

.benefit-card {
	background: #f8fafc;
	padding: 2rem;
	border-radius: 8px;
	border: 1px solid #e2e8f0;
	text-align: center;
	transition: transform 0.2s, box-shadow 0.2s;
}

.benefit-card:hover {
	transform: translateY(-2px);
	box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.1);
}

.benefit-icon {
	font-size: 2.5rem;
	margin-bottom: 1rem;
}

.benefit-card h4 {
	color: #1a365d;
	font-size: 1.2rem;
	margin-bottom: 0.5rem;
	font-weight: 600;
}

.location-info {
	background: #f8fafc;
	padding: 2rem;
	border-radius: 8px;
	border-left: 4px solid #667eea;
}

.location-info ul {
	list-style-type: disc;
	margin-left: 1.5rem;
	margin-top: 1rem;
}

.apply-section {
	background: #f8fafc;
	padding: 3rem 2rem;
	border-radius: 12px;
	text-align: center;
	border: 2px dashed #cbd5e0;
}

.apply-buttons {
	display: flex;
	gap: 1rem;
	justify-content: center;
	margin: 2rem 0;
	flex-wrap: wrap;
}

.apply-btn {
	padding: 1rem 2rem;
	border-radius: 8px;
	text-decoration: none;
	font-weight: 600;
	transition: all 0.2s;
	display: inline-block;
	min-width: 180px;
	text-align: center;
}

.apply-btn.primary {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
}

.apply-btn.primary:hover {
	transform: translateY(-2px);
	box-shadow: 0 8px 25px -5px rgba(102, 126, 234, 0.5);
}

.apply-btn.secondary {
	background: #1a365d;
	color: white;
}

.apply-btn.secondary:hover {
	background: #2d3748;
	transform: translateY(-2px);
	box-shadow: 0 8px 25px -5px rgba(45, 55, 72, 0.5);
}

.contact-info {
	margin-top: 2rem;
	font-size: 0.9rem;
	color: #4a5568;
	line-height: 1.6;
}

.contact-info a {
	color: #667eea;
	text-decoration: none;
}

.contact-info a:hover {
	text-decoration: underline;
}

@media (max-width: 768px) {
	.job-hero {
		flex-direction: column;
		text-align: center;
	}
	
	.job-hero h1 {
		font-size: 1.8rem;
	}
	
	.job-meta {
		justify-content: center;
		flex-direction: column;
		gap: 0.5rem;
		text-align: center;
	}
	
	.job-hero-actions {
		width: 100%;
	}
	
	.benefits-grid {
		grid-template-columns: 1fr;
	}
	
	.apply-buttons {
		flex-direction: column;
		align-items: center;
	}
}
</style>