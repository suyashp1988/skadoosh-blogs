	<!-- News Feed Script -->
	<script>
		// RSS feeds for Power Platform news
		const RSS_FEEDS = [
			{
				name: 'Power Platform Blog',
				url: 'https://powerapps.microsoft.com/en-us/blog/feed/',
				category: 'Power Platform'
			},
			{
				name: 'Dynamics 365 Blog', 
				url: 'https://cloudblogs.microsoft.com/dynamics365/feed/',
				category: 'Dynamics 365'
			},
			{
				name: 'Power Apps Blog',
				url: 'https://powerapps.microsoft.com/en-us/blog/category/power-apps/feed/',
				category: 'Power Apps'
			}
		];

		// Function to fetch and display news
		async function loadNews() {
			const newsContainer = document.getElementById('news-feed');
			
			try {
				// For now, show static content - we'll implement RSS parsing later
				const staticNews = [
					{
						title: "Power Platform and Dynamics 365 updates for November 2025",
						summary: "New AI capabilities, enhanced security features, and improved developer tools now available.",
						date: "November 13, 2025",
						source: "Power Platform Blog",
						link: "https://powerapps.microsoft.com/en-us/blog/"
					},
					{
						title: "Dataverse for Teams general availability update",
						summary: "Enhanced collaboration features and new integration options for Microsoft Teams environments.",
						date: "November 10, 2025", 
						source: "Dynamics 365 Blog",
						link: "https://cloudblogs.microsoft.com/dynamics365/"
					},
					{
						title: "Power Automate process mining capabilities expand",
						summary: "New process discovery and optimization features help organizations identify automation opportunities.",
						date: "November 8, 2025",
						source: "Power Automate Blog", 
						link: "https://flow.microsoft.com/en-us/blog/"
					}
				];

				let newsHTML = '';
				staticNews.forEach(item => {
					newsHTML += `
						<article class="news-item">
							<div class="news-header">
								<h3><a href="${item.link}" target="_blank">${item.title}</a></h3>
								<div class="news-meta">
									<span class="news-date">${item.date}</span>
									<span class="news-source">${item.source}</span>
								</div>
							</div>
							<p class="news-summary">${item.summary}</p>
							<a href="${item.link}" target="_blank" class="read-more">Read Full Article ‚Üí</a>
						</article>
					`;
				});

				newsContainer.innerHTML = newsHTML;

			} catch (error) {
				newsContainer.innerHTML = `
					<div class="news-error">
						<p>Unable to load latest updates. Please visit the official Microsoft blogs directly.</p>
						<div class="direct-links">
							<a href="https://powerapps.microsoft.com/en-us/blog/" target="_blank">Power Platform Blog</a>
							<a href="https://cloudblogs.microsoft.com/dynamics365/" target="_blank">Dynamics 365 Blog</a>
						</div>
					</div>
				`;
			}
		}

		// Load news when page loads
		document.addEventListener('DOMContentLoaded', loadNews);
	</script>

