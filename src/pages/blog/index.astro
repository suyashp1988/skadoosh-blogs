---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Resources - ${SITE_TITLE}`} description="Technical insights, case studies, and resources about Microsoft Dynamics 365 CE, Power Platform, AI, and automation solutions." />
		<style>
			/* Base styles */
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #2c3e50;
				margin: 0;
				padding: 0;
			}

			/* Hero Section */
			.resources-hero {
				background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
				color: white;
				padding: 4rem 1.5rem 3rem;
				text-align: center;
			}

			.resources-hero h1 {
				font-size: 3rem;
				font-weight: 700;
				margin-bottom: 1rem;
			}

			.resources-hero p {
				font-size: 1.3rem;
				max-width: 800px;
				margin: 0 auto;
				color: #ecf0f1;
			}

			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 4rem 1.5rem;
			}
			
			.section-intro {
				text-align: center;
				margin-bottom: 3rem;
			}
			
			.section-intro h2 {
				font-size: 2.2rem;
				color: #2c3e50;
				margin-bottom: 1rem;
			}
			
			.section-intro p {
				font-size: 1.1rem;
				color: #64748b;
				max-width: 600px;
				margin: 0 auto;
			}

			ul {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			
			ul li {
				background: white;
				border-radius: 15px;
				overflow: hidden;
				box-shadow: 0 8px 25px rgba(0,0,0,0.1);
				transition: all 0.3s ease;
			}
			
			ul li:hover {
				transform: translateY(-5px);
				box-shadow: 0 15px 35px rgba(0,0,0,0.15);
			}

			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}

			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}
			
			.post-content {
				padding: 1.5rem;
			}

			ul li a {
				display: block;
				color: inherit;
			}
			
			.title {
				font-size: 1.4rem;
				font-weight: 600;
				margin: 0 0 0.5rem 0;
				color: #2c3e50;
				line-height: 1.3;
			}
			
			.date {
				margin: 0;
				color: #667eea;
				font-size: 0.9rem;
				font-weight: 500;
			}

			ul li a:hover .title {
				color: #667eea;
			}

			/* Call to Action */
			.cta-section {
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				padding: 4rem 1.5rem;
				text-align: center;
				margin-top: 4rem;
				border-radius: 15px;
			}

			.cta-button {
				display: inline-block;
				margin-top: 1.5rem;
				padding: 1rem 2rem;
				background: #ff6b6b;
				color: white;
				text-decoration: none;
				border-radius: 8px;
				font-weight: 600;
				font-size: 1.1rem;
				transition: all 0.3s ease;
			}

			.cta-button:hover {
				background: #ff5252;
				transform: translateY(-2px);
			}

			@media (max-width: 768px) {
				.resources-hero h1 {
					font-size: 2.5rem;
				}
				
				ul {
					grid-template-columns: 1fr;
				}
				
				main {
					padding: 2rem 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
		<section class="resources-hero">
			<h1>Resources & Insights</h1>
			<p>Technical insights, case studies, and thought leadership in Microsoft Dynamics 365 CE, Power Platform, AI, and automation solutions.</p>
		</section>

		<main>
			<div class="section-intro">
				<h2>Latest Articles</h2>
				<p>Explore our collection of technical articles, implementation guides, and industry insights.</p>
			</div>
			
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img src={post.data.heroImage} alt={post.data.title} />
									<div class="post-content">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>

			<!-- Call to Action -->
			<section class="cta-section">
				<h2>Need Expert Guidance?</h2>
				<p>Ready to implement these solutions in your organization? Let's discuss your specific requirements.</p>
				<a href="/contact" class="cta-button">Schedule a Consultation</a>
			</section>
		</main>
		
		<Footer />
	</body>
</html>
