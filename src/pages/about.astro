---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { 
	SITE_TITLE, 
	COMPANY_NAME, 
	COMPANY_TAGLINE,
	LINKEDIN_URL,
	HEADQUARTERS,
	DELIVERY_CENTER 
} from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About Us - ${SITE_TITLE}`} description="Learn about Skadoosh B.V., our unique approach to Microsoft Dynamics 365 CE and Power Platform solutions, and our founder Suyash Pandey." />
		<style>
			/* Base styles */
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #2c3e50;
				margin: 0;
				padding: 0;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1.5rem;
			}

			/* Hero Section */
			.about-hero {
				background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
				color: white;
				padding: 4rem 1.5rem 3rem;
				text-align: center;
			}

			.about-hero h1 {
				font-size: 3rem;
				font-weight: 700;
				margin-bottom: 1rem;
			}

			.about-hero p {
				font-size: 1.3rem;
				max-width: 800px;
				margin: 0 auto;
				color: #ecf0f1;
			}

			/* Company Story */
			.company-story {
				padding: 5rem 1.5rem;
				background: #f8fafc;
			}

			.story-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
				margin-bottom: 4rem;
			}

			.story-content h2 {
				font-size: 2.2rem;
				color: #2c3e50;
				margin-bottom: 1.5rem;
			}

			.story-content p {
				font-size: 1.1rem;
				color: #64748b;
				margin-bottom: 1.5rem;
				line-height: 1.7;
			}

			.highlight-box {
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				padding: 2.5rem;
				border-radius: 15px;
				text-align: center;
			}

			.highlight-box h3 {
				font-size: 1.5rem;
				margin-bottom: 1rem;
			}

			.highlight-box p {
				color: #e8f4fd;
				margin: 0;
			}

			/* Founder Section */
			.founder-section {
				padding: 5rem 1.5rem;
				background: white;
			}

			.founder-grid {
				display: grid;
				grid-template-columns: 300px 1fr;
				gap: 3rem;
				align-items: start;
			}

			.founder-image {
				width: 100%;
				height: 300px;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				border-radius: 15px;
				display: flex;
				align-items: center;
				justify-content: center;
				color: white;
				font-size: 4rem;
			}

			.founder-content h2 {
				font-size: 2.2rem;
				color: #2c3e50;
				margin-bottom: 1rem;
			}

			.founder-content h3 {
				color: #667eea;
				font-size: 1.3rem;
				margin-bottom: 2rem;
			}

			.founder-content p {
				color: #64748b;
				margin-bottom: 1.5rem;
				line-height: 1.7;
			}

			.founder-stats {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}

			.stat {
				text-align: center;
				padding: 1.5rem;
				background: #f8fafc;
				border-radius: 10px;
			}

			.stat-number {
				font-size: 2.5rem;
				font-weight: 700;
				color: #667eea;
			}

			.stat-label {
				color: #64748b;
				font-weight: 500;
			}

			/* Our Approach */
			.our-approach {
				padding: 5rem 1.5rem;
				background: #f8fafc;
			}

			.section-title {
				text-align: center;
				font-size: 2.5rem;
				font-weight: 700;
				margin-bottom: 3rem;
				color: #2c3e50;
			}

			.approach-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 3rem;
			}

			.approach-card {
				background: white;
				padding: 2.5rem;
				border-radius: 15px;
				box-shadow: 0 8px 25px rgba(0,0,0,0.1);
				text-align: center;
				transition: transform 0.3s ease;
			}

			.approach-card:hover {
				transform: translateY(-5px);
			}

			.approach-icon {
				font-size: 3rem;
				margin-bottom: 1.5rem;
			}

			.approach-card h3 {
				font-size: 1.4rem;
				color: #2c3e50;
				margin-bottom: 1rem;
			}

			.approach-card p {
				color: #64748b;
				line-height: 1.6;
			}

			/* Global Presence */
			.global-presence {
				padding: 5rem 1.5rem;
				background: white;
			}

			.locations-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 3rem;
				margin-top: 3rem;
			}

			.location-card {
				text-align: center;
				padding: 2rem;
				background: #f8fafc;
				border-radius: 12px;
			}

			.location-card.coming-soon {
				background: #f1f5f9;
				opacity: 0.6;
				position: relative;
			}

			.location-card.coming-soon::after {
				content: "Coming Soon";
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				background: rgba(100, 116, 139, 0.9);
				color: white;
				padding: 0.5rem 1rem;
				border-radius: 6px;
				font-weight: 600;
				font-size: 0.9rem;
			}

			.location-flag {
				font-size: 4rem;
				margin-bottom: 1rem;
			}

			.location-card h3 {
				font-size: 1.3rem;
				color: #2c3e50;
				margin-bottom: 0.5rem;
			}

			.location-card.coming-soon h3,
			.location-card.coming-soon p,
			.location-card.coming-soon .location-type {
				color: #94a3b8;
			}

			.location-type {
				color: #667eea;
				font-weight: 600;
				margin-bottom: 1rem;
			}

			.location-card p {
				color: #64748b;
				line-height: 1.6;
			}

			/* CTA Section */
			.cta-section {
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				padding: 4rem 1.5rem;
				text-align: center;
			}

			.cta-button {
				display: inline-block;
				margin-top: 2rem;
				padding: 1rem 2rem;
				background: #ff6b6b;
				color: white;
				text-decoration: none;
				border-radius: 8px;
				font-weight: 600;
				font-size: 1.1rem;
				transition: all 0.3s ease;
			}

			.cta-button:hover {
				background: #ff5252;
				transform: translateY(-2px);
			}

			/* Responsive */
			@media (max-width: 768px) {
				.about-hero h1 {
					font-size: 2.5rem;
				}
				
				.story-grid,
				.founder-grid {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
				
				.founder-image {
					height: 250px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
