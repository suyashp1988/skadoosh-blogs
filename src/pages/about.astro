    <!-- Styles for the modern design -->
    <style>
        :root {
            --primary-color: #3B82F6; /* A nice, modern blue */
            --text-color: #374151; /* Dark gray for readability */
            --heading-color: #1F2937; /* Even darker for headings */
            --background-color: #F9FAFB; /* Very light gray background */
            --card-background: #FFFFFF;
            --success-color: #10B981; /* Green for checkmarks */
            --border-color: #E5E7EB;
        }

        /* The main container for the content, styled as a card */
        .about-me-container {
            max-width: 800px;
            width: 100%;
            margin: 2rem auto; /* Added margin for spacing within the layout */
            background-color: var(--card-background);
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            padding: 3rem;
            border: 1px solid var(--border-color);
            box-sizing: border-box;
        }

		.about-section {
			display: flex;
			align-items: center;
			gap: 2.5rem;
			margin-bottom: 3rem;
			flex-wrap: wrap;
		}

		.profile-pic {
			width: 160px;
			height: 160px;
			border-radius: 50%;
			object-fit: cover;
			flex-shrink: 0;
			margin: 0 auto;
            border: 6px solid var(--card-background);
            box-shadow: 0 0 0 3px var(--primary-color), 0 5px 15px rgba(0,0,0,0.1);
		}

		.about-text {
			flex: 1;
			min-width: 300px;
		}

		h2 {
            font-family: 'Poppins', sans-serif; /* Ensuring headings use the Poppins font */
            font-size: 1.8rem;
			font-weight: 700;
            color: var(--heading-color);
			margin-top: 0;
            margin-bottom: 1.5rem;
            position: relative;
            padding-bottom: 0.75rem;
		}

        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 4px;
            background: var(--primary-color);
            border-radius: 2px;
        }

        ul {
            list-style: none;
            padding-left: 0;
        }

        ul li {
            padding-left: 2rem;
            position: relative;
            margin-bottom: 0.75rem;
            font-size: 1.05rem;
            font-weight: 500;
        }

