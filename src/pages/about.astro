		/* Responsive adjustments */
        @media (max-width: 768px) {
            .about-me-container {
                padding: 2rem;
                margin: 1rem auto;
            }
            .about-section {
                flex-direction: column;
                align-items: center;
				text-align: center;
                gap: 2rem;
            }
            h2 {
                text-align: center;
            }
            h2::after {
                left: 50%;
