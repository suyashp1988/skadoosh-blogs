---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, LINKEDIN_URL } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/careers">Careers</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
			<HeaderLink href="/blog">Resources</HeaderLink>
		</div>
		
		<div class="social-links">
			<a href="mailto:suyash@ska-doosh.com" target="_blank" title="Email us">
				<span class="sr-only">Email Skadoosh</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z"/>
				</svg>
			</a>
			<a href={LINKEDIN_URL} target="_blank" title="LinkedIn">
				<span class="sr-only">Follow Suyash on LinkedIn</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: #667eea;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
	}
	nav a:hover {
		color: #667eea;
		border-bottom-color: #667eea;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: #667eea;
	}
	.internal-links {
		display: flex;
		gap: 0.5rem;
	}
	.social-links,
	.social-links a {
		display: flex;
		gap: 0.5rem;
	}
	.social-links a {
		padding: 0.5em;
		color: #64748b;
		transition: color 0.3s ease;
	}
	.social-links a:hover {
		color: #667eea;
	}
	@media (max-width: 720px) {
		.internal-links {
			flex-wrap: wrap;
			gap: 0.25rem;
		}
		.internal-links a {
			padding: 0.5em 0.25em;
			font-size: 0.9em;
		}
		.social-links {
			display: none;
		}
		h2 {
			font-size: 1em;
		}
	}
</style>
